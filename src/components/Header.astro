---
import { SITE_TITLE, SITE_TAGLINE } from "../config";
---

<header class="sticky top-0 z-30 bg-gradient-to-b from-slate-950/95 via-slate-950/85 to-transparent backdrop-blur border-b border-slate-800/40">
  <div class="mx-auto flex h-14 max-w-6xl items-center justify-between px-4 lg:h-16 lg:px-6">
    <!-- Left: logo + primary nav -->
    <div class="flex items-center gap-6">
      <a href="/" class="flex items-center gap-3 transition-transform hover:scale-105">
        <img
          src="/logo-primemtbtours.png"
          alt={SITE_TITLE}
          class="h-12 w-12 rounded-full object-cover ring-2 ring-sky-500/50 shadow-lg shadow-sky-500/20"
        />
        <div class="flex flex-col">
          <span class="text-xl font-bold tracking-tight bg-gradient-to-r from-sky-400 to-emerald-400 bg-clip-text text-transparent">
            Prime MTB Tours
          </span>
          <span class="text-xs text-slate-400 tracking-wide">
            {SITE_TAGLINE}
          </span>
        </div>
      </a>
      <nav class="hidden items-center gap-4 text-sm text-slate-200/80 sm:flex">
        <a href="#tours" class="relative py-1 transition-colors hover:text-white after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-gradient-to-r after:from-sky-400 after:to-emerald-400 after:transition-all after:duration-300 hover:after:w-full">Tours</a>
        <a href="#area" class="relative py-1 transition-colors hover:text-white after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-gradient-to-r after:from-sky-400 after:to-emerald-400 after:transition-all after:duration-300 hover:after:w-full">Where we ride</a>
        <a href="#levels" class="relative py-1 transition-colors hover:text-white after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-gradient-to-r after:from-sky-400 after:to-emerald-400 after:transition-all after:duration-300 hover:after:w-full">Levels &amp; bikes</a>
        <a href="#contact" class="relative py-1 transition-colors hover:text-white after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-gradient-to-r after:from-sky-400 after:to-emerald-400 after:transition-all after:duration-300 hover:after:w-full">Contact</a>
      </nav>
    </div>

    <!-- Right: search, language, profile -->
    <div class="flex items-center gap-4 text-sm text-slate-200/80">
      <div class="hidden items-center gap-2 rounded-full border border-slate-600/70 bg-slate-900/70 px-3 py-1 text-xs sm:flex">
        <span class="opacity-70">Search</span>
        <span class="text-lg leading-none">âŒ•</span>
      </div>
      <button class="hidden text-xs font-medium opacity-80 hover:opacity-100 sm:inline">
        EN
      </button>
      <button class="flex h-8 w-8 items-center justify-center rounded-full bg-slate-700/80 text-xs font-semibold">
        P
      </button>
    </div>
  </div>
</header>
